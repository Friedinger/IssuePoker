{
  "name": "issuepoker-frontend",
  "description": "A web application for planning and estimating software development issues.",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=22.14 <=24"
  },
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "build": "vue-tsc --build --noCheck && vite build && npm run post-build",
    "post-build": "cyclonedx-npm --omit dev --omit optional --output-reproducible -o dist/application.cdx.json  --validate",
    "lint": "prettier . --check && eslint . && vue-tsc --build --noEmit",
    "fix": "prettier . --write && eslint . --fix"
  },
  "dependencies": {
    "@fontsource/roboto": "5.2.10",
    "@muenchen/appswitcher-vue": "2.2.0",
    "@vueuse/core": "14.2.1",
    "pinia": "3.0.4",
    "vue": "3.5.28",
    "vue-i18n": "11.2.8",
    "vue-markdown-render": "2.3.0",
    "vue-router": "5.0.3",
    "vuetify": "3.12.1"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "4.1.2",
    "@mdi/js": "7.4.47",
    "@muenchen/prettier-codeformat": "1.0.2",
    "@tsconfig/node-lts": "22.0.4",
    "@types/markdown-it": "14.1.2",
    "@types/node": "22.19.11",
    "@vitejs/plugin-vue": "6.0.4",
    "@vue/eslint-config-prettier": "10.2.0",
    "@vue/eslint-config-typescript": "14.7.0",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.8.1",
    "eslint": "9.39.3",
    "eslint-plugin-vue": "10.8.0",
    "jsdom": "28.1.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "unplugin-fonts": "1.4.0",
    "vite": "7.3.1",
    "vite-plugin-vue-devtools": "8.0.6",
    "vite-plugin-vuetify": "2.1.3",
    "vitest": "4.0.18",
    "vue-tsc": "3.2.5"
  }
}
